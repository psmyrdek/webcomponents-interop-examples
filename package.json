{
  "name": "webcomponents-interop-examples",
  "version": "1.0.0",
  "description": "Examples of Web Components interop capabilities",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/psmyrdek/webcomponents-interop-examples.git"
  },
  "scripts": {
    "setup": "cd projects && npm install --prefix react-app && npm install --prefix angular-app && npm install --prefix vue-app",
    "start:all": "npm-run-all -p start:react start:angular start:vue start:wc",
    "start:react": "cd projects/react-app && npm start",
    "start:angular": "cd projects/angular-app && ng serve",
    "start:vue": "cd projects/vue-app && npm run serve",
    "start:wc": "live-server ./web-components --port=8090"
  },
  "author": "psmyrdek",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/psmyrdek/webcomponents-interop-examples/issues"
  },
  "homepage": "https://github.com/psmyrdek/webcomponents-interop-examples#readme",
  "devDependencies": {
    "live-server": "1.2.0",
    "npm-run-all": "4.1.3"
  }
}
